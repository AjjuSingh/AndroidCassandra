<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.cassandra.droidbargain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/b_96"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.cassandra.droidbargain.feed.FeedActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.cassandra.droidbargain.profile.Profile"
            android:label="@string/title_activity_profile" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.android.cassandra.droidbargain.stores.StoreList"
            android:label="@string/title_activity_stores" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.android.cassandra.droidbargain.stores.StoreActivity"
            android:label="@string/title_activity_store" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.android.cassandra.droidbargain.InputActivity"
            android:label="@string/title_activity_input" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>